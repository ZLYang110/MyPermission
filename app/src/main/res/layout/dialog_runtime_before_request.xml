<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/res_bg_round_color_white_radius_def"
    android:layout_marginLeft="44dp"
    android:layout_marginRight="44dp">

    <TextView
        android:id="@+id/tv_dialog_permission_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:text="关闭"/>

    <ImageView
        android:id="@+id/iv_dialog_permission"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/tv_dialog_permission_close"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_dialog_permission_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dialog_permission"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:textColor="#232323"
        android:textSize="22sp"
        tools:text="权限名" />

    <TextView
        android:id="@+id/tv_dialog_permission_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_permission_title"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:lineSpacingExtra="8dp"
        android:textColor="#666666"
        android:textSize="15sp"
        tools:text="权限描述" />

    <TextView
        android:id="@+id/tv_dialog_permission_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_below="@+id/tv_dialog_permission_description"
        android:text="去授权"
        android:background="@drawable/res_bg_round_color_main_radius_max"/>

</RelativeLayout>